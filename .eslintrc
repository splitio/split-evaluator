{
  "extends": [
    "eslint:recommended"
  ],

  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },

  "rules": {
    "indent": [2, 2, {"SwitchCase": 1}],
    "quotes": [1, "single", "avoid-escape"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"],
    "no-underscore-dangle": 0,
    "eqeqeq": [2, "smart"],
    "no-unused-expressions": 0,
    "new-cap" : 0,
    "no-mixed-requires": 0,
    "camelcase": [2, {"properties": "never"}],
    "no-use-before-define": [2, "nofunc"],
    "comma-dangle": ["error", {
      "arrays": "never",
      "objects": "always-multiline",
      "imports": "never",
      "exports": "never",
      "functions": "never"
    }]
  },

  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
}
